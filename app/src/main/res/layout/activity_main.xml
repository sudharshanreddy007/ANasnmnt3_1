        android:layout_width="fill_parent"
        android:layout_height="85sp"
        android:background="#fa0404"
        android:textSize="20dp"
        android:gravity="center"
        android:text="RED" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="85sp"
        android:gravity="center"
        android:textSize="20dp"
