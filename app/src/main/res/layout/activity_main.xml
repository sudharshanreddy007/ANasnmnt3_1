        android:id="@+id/textView4"
        android:layout_width="fill_parent"
        android:layout_height="85sp"
        android:textSize="20dp"
        android:gravity="center"
        android:background="#73f961"
        android:text="GREEN" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="fill_parent"
        android:background="#4659ea"
        android:layout_height="85sp"
        android:textSize="20dp"
        android:gravity="center"
        android:text="BLUE" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="fill_parent"
        android:background="#47179f"
        android:gravity="center"
        android:layout_height="85sp"
        android:textSize="20dp"
        android:text="INDIGO" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="fill_parent"
        android:layout_height="85sp"
        android:background="#da21d7"
        android:gravity="center"
        android:text="VIOLET"
        android:textSize="20dp" />

